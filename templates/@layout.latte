<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">

	<title>{ifset #title}{include title|striptags|strip} | {/ifset}{$siteName}</title>

	<link rel="stylesheet" media="all" href="{$basePath}/css/bootstrap.min.css">
	{block head}{/block}
</head>

<body>
	<script type="text/javascript"> document.documentElement.className+=' js' </script>

	<div id="menu">
		{control mainMenu}
	</div>
	<div class="container-fluid">
		<div class="row">
			<div id="content" class="col-lg-offset-2 col-md-offset-2 col-sm-offset-3 col-lg-7 col-md-7 col-sm-9 col-xs-12">
				{include content}
			</div>
		</div>
	</div>
{snippet flashMessage}
{control flashMessage}
{/snippet}
</body>
</html>
